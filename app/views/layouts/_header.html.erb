<div class="drawer drawer--left">
  <header class="drawer-navbar headroom" role="banner">
    <div class="Container t-relative">
      <div class="drawer-navbar-header">
        <a data-turbo="false" class="drawer-brand" href="/">
          ARMIS
        </a>
        <button type="button" class="drawer-toggle drawer-hamburger">
          <span class="sr-only">toggle navigation</span>
          <span class="drawer-hamburger-icon"></span>
        </button>
      </div>
      <nav class="drawer-nav" role="navigation">
        <ul class="drawer-menu">

    			<li>
    				<a class="drawer-menu-item drawer-menu-item--main js-scrollReveal-delay" href="./?mode=cate&cbid=2394562&csid=0">
    					ABOUT US
    				</a>
    			</li>
          <li>
            <a class="drawer-menu-item drawer-menu-item--main js-scrollReveal-delay" href="./?mode=cate&cbid=2354708&csid=0">
              VISION
            </a>
          </li>


          
          <% if user_signed_in? %>
          <li>
            <a data-turbo="false" class="drawer-menu-item drawer-menu-item--cart Badge js-scrollReveal-delay" href="/like">

              <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3 w-3 inline-block relative cursor-pointer"
              fill="black"
              style="bottom: 1px;"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
              Like
            </a>
          </li>
          <% if current_user.try(:admin?) %>
          <%= link_to '管理者ログイン', rails_admin_path %>
          <% end %>
    			<li>
    				<a data-turbo="false" class="drawer-menu-item js-scrollReveal-delay" href="/cart">
    					<svg viewBox="0 0 32 32" class="icon" aria-hidden="true"><use xlink:href="#icon-cart" /></svg>

              CART
              </a>
    			</li>
          <li>

          <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "drawer-menu-item drawer-menu-item--main js-scrollReveal-delay" %>

          </li>
          <% else %>
    			<li>
    				<a data-turbo="false" class="drawer-menu-item drawer-menu-item--cart Badge js-scrollReveal-delay" href="/cart">
    					<svg viewBox="0 0 32 32" class="icon" aria-hidden="true"><use xlink:href="#icon-cart" /></svg>
              CART
              </a>
    			</li>
          <li>
            <a data-turbo="false" class="drawer-menu-item js-scrollReveal-delay" href="/users/sign_in">
              <svg viewBox="0 0 32 32" class="icon" aria-hidden="true"><use xlink:href="#icon-person" /></svg>
              ACCOUNT
            </a>
          </li>
          <% end %>

          
        </ul>
      </nav>
    </div>
  </header>

</div>
